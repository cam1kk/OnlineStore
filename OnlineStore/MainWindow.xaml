<Window x:Class="OnlineStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineStore"
        mc:Ignorable="d"
        Title="Online Store" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="OnlineStore" FontSize="35" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontWeight="Bold" Foreground="Blue"/>
        <Button Grid.Row="2" Height="25" Width="100" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Content="Registration" FontWeight="Bold" FontSize="15"
                Click="RegistrationButton_Click"/>
        <Button Grid.Row="3" Height="25" Width="100" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Content="Login" FontWeight="Bold" FontSize="15"
                Click="LoginButton_Click"/>
    </Grid>
</Window>
